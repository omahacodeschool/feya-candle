<%= form_for(@contact) do |f| %>
  <% if @contact.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@contact.errors.count, "error") %> prohibited this form from being submitted:</h2>

      <ul>
      <% @contact.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="field">
    <p>
      <%= f.label :name %><br />
      <%= f.text_field :name %>
    </p>
  </div>
  <div class="field">
    <p>
      <%= f.label :email %><br />
      <%= f.text_field :email %>
    </p>
  </div>
  <div class="field">
    <p>
      <%= f.label :phone %><br />
      <%= f.text_field :phone %>
    </p>
  </div>
  <div class="field">
    <p>
      <%= f.label :message %><br />
      <%= f.text_area :message %>
    </p>
  </div>
    <%= f.hidden_field :category, :value => 'volunteer'%>
  <div class="actions">
    <p>
      <%= f.submit "Send message" %>
    </p>
  </div>
<% end %>