<h1>Product Information</h1>

<p>
  <b>Name:</b>
  <%= @product.name %>
</p>

<p>
  <%= image_tag(@product.image_url.to_s) %>
</p>

<p>
  <b>Description:</b>
  <%= @product.description %>
</p>

<p>
  <b>Price:</b>
  <%= @product.price %>
</p>

<% if current_user %>
  <%= link_to 'Edit', edit_product_path(@product) %> |
  <%= link_to 'Products Index', products_path %>
<% end %>
