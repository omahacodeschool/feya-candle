<%= form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this location from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <h4><%= f.label :name %>
    <%= f.text_field :name %></h4>
  </div>
  <div class="field">
    <%= f.file_field :image %>
    <% if @product.image? %>
      <p>Current image:</p>
      <%= image_tag @product.image_url(:thumb).to_s %>
    <% end %>
  </div>
  <div class="field">
    <h4><%= f.label :description %>
        <%= f.text_field :description %></h4>
  </div>
  <div class="field">
    <h4><%= f.label :price %>
        <%= f.text_field :price %></h4>
  </div>
  <div class="actions">
    <p>
      <%= f.submit %>
    </p>
  </div>
<% end %>